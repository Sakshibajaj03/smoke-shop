rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // SLIDERS COLLECTION
    match /sliders/{sliderId} {
      allow read: if true;
      allow write: if true;
      // â–² PROD: replace with admin auth check
    }
    
    // BRANDS COLLECTION
    match /brands/{brandId} {
      allow read: if true;
      allow write: if true;
      // Required fields validation (basic safety)
      allow create, update: if request.resource.data.name is string;
    }
    
    // PRODUCTS COLLECTION
    match /products/{productId} {
      allow read: if true;
      allow write: if true;
      // Ensure correct product structure
      allow create, update: if request.resource.data.name is string 
                            && request.resource.data.brand is string;
    }
    
    // FLAVOURS COLLECTION (PRODUCT-SCOPED)
    // ONE FLAVOUR = ONE PRODUCT
    match /flavours/{flavourId} {
      allow read: if true;
      allow write: if true;
      // Enforce REQUIRED schema: name, flavorId, productId, brand
      allow create, update: if request.resource.data.name is string 
                            && request.resource.data.flavorId is string 
                            && request.resource.data.productId is string 
                            && request.resource.data.brand is string;
    }
    
    // GLOBAL READ ACCESS (PUBLIC WEBSITE)
    // Allow public read access to all other collections for website viewing
    match /{document=**} {
      allow read: if true;
      allow write: if false;
    }
  }
}




